<html>

<head>
    <link href="/assets/css/newEntry.css" rel="stylesheet">
</head>

<body>
<p class="loader">
    Loading...
</p>

<header class="header">
    <h1>
        {{{data}}}
    </h1>
</header>

<main>
    <div class="content">
        <div class="container">

            {{#each entries}}
                <div class="row card-template">
                    <div class="col col-md-8 col-md-offset-2">
                        <div class="header__shadow"></div>

                        <div class="card-area">
                            <h2 class="entry-title">
                                {{{title}}}
                            </h2>
                            <div class="description">
                                {{{content}}}
                            </div>
                            <div class="date">
                                {{{dateTime}}}
                            </div>
                        </div>

                    </div>
                </div>
            {{/each}}

        </div>
    </div>
</main>
<script src="/assets/js/app.js" async></script>
</body>

</html>
